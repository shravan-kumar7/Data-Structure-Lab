//factorial of a number
#include<stdio.h>
#include<stdlib.h>
int fact(int n)
{
if (n==0)  //factorial 0=1
    return 1;
if (n==1)
    return 1; //factorial 1=1
else
    return (n*fact(n-1)); //returns n*factorial of lower number
}
int main()
{
    int n;
    printf("enter a number: ");
    scanf("%d",&n);
    printf("factorial of %d is %d\n",n,fact(n));
    return 0;
}
